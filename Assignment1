#include <iostream>
using namespace std;

int main() {
    cout << "Hello Inventory System!\n";
    cout << "\tShowing Data Sizes:\n";
    cout << "int: " << sizeof(int) << " bytes\n";
    cout << "float: " << sizeof(float) << " bytes\n";
    cout << "char: " << sizeof(char) << " bytes\n";
    return 0;
}
